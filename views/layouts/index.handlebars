    <script src="app.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            background-image: linear-gradient(white, rgb(247, 158, 70), rgb(250, 127, 0));
        }
        /* Dropdown*/
        
        .mydropdown {
            overflow: hidden;
        }
        
        .mydropdown .mydropbtn {
            font-size: 17px;
            border: none;
            outline: none;
            font-size: medium;
            font-weight: bold;
            color: #F6F6F6;
            padding: 20px;
            background-color: inherit;
            margin: 0;
        }
        
        .mydropdown-content {
            display: none;
            position: absolute;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
            z-index: 1;
        }
        
        .mydropdown-content a {
            float: none;
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            text-align: left;
        }
        
        .mydropdown:hover .mydropbtn {
            background-color: rgb(250, 127, 0);
            color: black;
        }
        
        .dropdown-content a:hover {
            background-color: #ddd;
            color: black;
        }
        
        .mydropdown:hover .mydropdown-content {
            display: block;
            background-color: #ddd;
        }
        
        .fa-caret-down {
            width: 0;
            height: 0;
            margin: 0;
            padding: 0;
            font-size: 20px!important;
        }
        /*Dropdown Sonu*/
    </style>
</head>

